/* components/user-avatar/user-avatar.wxss */

.user-avatar {
  position: relative;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.user-avatar:active {
  transform: scale(0.95);
}

.user-avatar.small {
  width: 60rpx;
  height: 60rpx;
}

.user-avatar.medium {
  width: 80rpx;
  height: 80rpx;
}

.user-avatar.large {
  width: 120rpx;
  height: 120rpx;
}

.user-avatar.xlarge {
  width: 160rpx;
  height: 160rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: var(--error-color);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.badge-text {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
  padding: 0 8rpx;
}

.online-indicator {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  background: var(--success-color);
  border-radius: 50%;
  border: 2rpx solid white;
}

/* 不同尺寸的在线指示器 */
.user-avatar.small .online-indicator {
  width: 16rpx;
  height: 16rpx;
  bottom: 2rpx;
  right: 2rpx;
}

.user-avatar.large .online-indicator {
  width: 24rpx;
  height: 24rpx;
  bottom: 6rpx;
  right: 6rpx;
}

.user-avatar.xlarge .online-indicator {
  width: 28rpx;
  height: 28rpx;
  bottom: 8rpx;
  right: 8rpx;
}
