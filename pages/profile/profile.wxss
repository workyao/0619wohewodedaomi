/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-card {
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-level {
  display: inline-block;
  padding: 6rpx 12rpx;
  background: var(--accent-color);
  color: white;
  border-radius: 12rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.user-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.edit-btn {
  padding: 12rpx;
  background: var(--background-color);
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
}

.edit-icon {
  font-size: 24rpx;
}

/* 用户统计 */
.user-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 10rpx;
  background: var(--background-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
  background: var(--border-color);
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 成就徽章 */
.badges-section {
  margin-bottom: 20rpx;
}

.badges-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.badge-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.badges-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.badge-item.unlocked {
  background: linear-gradient(135deg, var(--accent-color), var(--secondary-color));
  color: white;
}

.badge-item.locked {
  background: var(--background-color);
  opacity: 0.6;
}

.badge-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.badge-name {
  font-size: 20rpx;
  text-align: center;
  margin-bottom: 4rpx;
}

.badge-progress {
  font-size: 18rpx;
  opacity: 0.8;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 20rpx;
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--background-color);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--background-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  flex: 1;
  margin-left: 20rpx;
}

.menu-arrow {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 最近活动 */
.recent-section {
  margin-bottom: 20rpx;
}

.recent-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-all {
  font-size: 24rpx;
  color: var(--accent-color);
}

.activity-list {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--background-color);
  border-radius: 50%;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  display: block;
  font-size: 26rpx;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.activity-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 分享推荐 */
.share-section {
  margin-bottom: 40rpx;
}

.share-content {
  text-align: center;
  padding: 20rpx 0;
}

.share-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.share-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 未登录状态 */
.login-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.login-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin: 40rpx;
}

.login-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.login-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.login-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx 20rpx;
  color: var(--text-secondary);
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.5;
}
