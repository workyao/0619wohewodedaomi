/* pages/song-detail/song-detail.wxss */

/* 歌曲信息卡片 */
.song-info-card {
  margin-bottom: 20rpx;
}

.song-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.song-main-info {
  flex: 1;
}

.song-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.song-album {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.song-meta {
  display: flex;
  gap: 20rpx;
}

.song-year,
.song-duration {
  font-size: 24rpx;
  color: var(--text-secondary);
  padding: 6rpx 12rpx;
  background: var(--background-color);
  border-radius: 12rpx;
}

.song-actions {
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-btn.favorite.active {
  background: var(--error-color);
  border-color: var(--error-color);
  color: white;
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.action-text {
  font-size: 20rpx;
}

/* 歌曲统计 */
.song-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 歌词展示 */
.lyrics-section {
  margin-bottom: 20rpx;
}

.lyrics-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lyrics-controls {
  display: flex;
  gap: 12rpx;
}

.control-btn {
  padding: 8rpx 16rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  background: var(--background-color);
  font-size: 22rpx;
  color: var(--text-secondary);
}

.control-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

.control-text {
  font-size: 22rpx;
}

.lyrics-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.lyrics-line {
  margin-bottom: 20rpx;
  line-height: 1.8;
}

.lyrics-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.lyrics-pinyin {
  display: block;
  font-size: 20rpx;
  color: var(--text-secondary);
  font-style: italic;
}

/* 简谱展示 */
.score-section {
  margin-bottom: 20rpx;
}

.score-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-preview {
  text-align: center;
}

.score-image {
  width: 100%;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 相关推荐 */
.related-section {
  margin-bottom: 20rpx;
}

.related-songs {
  display: flex;
  flex-direction: column;
}

.related-song-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.related-song-item:last-child {
  border-bottom: none;
}

.related-song-item:active {
  background: var(--background-color);
}

.song-info {
  flex: 1;
}

.song-name {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.song-album-name {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.song-duration {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 打卡记录 */
.checkin-records-section {
  margin-bottom: 120rpx;
}

.records-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.record-mood {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.mood-emoji {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.mood-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.record-note {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.5;
  background: var(--background-color);
  padding: 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid var(--border-color);
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions-container {
  display: flex;
  gap: 20rpx;
}

.actions-container .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 40rpx;
  border-radius: 12rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--text-secondary);
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .song-title {
    font-size: 32rpx;
  }
  
  .song-stats {
    padding: 16rpx 0;
  }
  
  .stat-number {
    font-size: 24rpx;
  }
  
  .lyrics-text {
    font-size: 26rpx;
  }
}
